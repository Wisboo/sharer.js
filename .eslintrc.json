{
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "env": {
        "browser": true
    },
    "rules": {
        "indent": [
            "error",
            2,
            {
                "ignoredNodes": [
                    "TemplateLiteral"
                ]
            }
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "extends": "eslint:recommended"
}